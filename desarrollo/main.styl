@import 'nib/vendor'
//--------variables---------
primero = #012440
segundo = #F8F8F8
tercero = #00b2a6

//----------Mixins--------------
sombras()
  content ""
  display: block
  width 60%
  height 10px
  position absolute
  bottom 7px
  box-shadow 0 11px 6px grey
  z-index -1

sombra-before()
  right 0
  transform rotate(3deg) skewX(10deg)

sombra-after()
  left 0
  transform rotate(-3deg) skewX(-10deg)

retraso(x)
  animation-delay x

after-preload()
  content ""
  background tercero
  display: block
  width 20px
  height 1em
  position absolute
  left -1%
  top 0
  z-index 1
  border-radius 50%
  animation: 1s preload infinite

//---------Fuentes---------------
@font-face
  font-family 'iconos'
  src  url('../fonts/icomoon.eot?2w6nnh')
  src  url('../fonts/icomoon.eot?2w6nnh#iefix') format('embedded-opentype'),
       url('../fonts/icomoon.ttf?2w6nnh') format('truetype'),
       url('../fonts/icomoon.woff?2w6nnh') format('woff'),
       url('../fonts/icomoon.svg?2w6nnh#icomoon') format('svg')

*
*:before
*:after
  box-sizing: border-box

body
  background segundo
  padding 0
  margin 0
  font-size: 16px;
  font-family: 'Lato', sans-serif

.cabecera
  background repeating-linear-gradient(45deg, transparent 0%, 15%,rgba(segundo,.1) 15%,15.1%,transparent 15.3%),
             linear-gradient(-45deg, tercero 0%, primero 100%)
  display flex
  flex-direction column
  align-items center
  padding 2.6em 2em
  color segundo
  text-align: center
  box-shadow 0 0 10px black
  position relative
  margin-bottom 2em
  &::before
  &::after
    sombras()

  &::before
    sombra-before()

  &::after
    sombra-after()

  h1
    font-weight 900
    margin 1em 0

  p
    margin 0
    font-weight: 400

.avatar
  width 120px
  height 200px
  border 1px solid #00b2a6
  border-radius 10px
  display flex
  flex-direction: column
  overflow hidden

.arriba
  width 100%
  height 25px
  display: flex
  justify-content center
  align-items center
  &::before
    content ""
    display: block
    width 20px
    height 1px
    background tercero

.centro
  background url("../images/yo.jpg")
  background-size cover
  background-position center
  height inherit
  border-top 1px solid tercero
  border-bottom 1px solid tercero

.abajo
  width 100%
  height 30px
  display: flex
  justify-content center
  align-items center
  &::before
    content ""
    display: block
    width 15px
    height 15px
    border 1px solid tercero
    border-radius 50%

.animacion
  font-family: "iconos"
  width 32px
  height 64px
  position relative
  top 15px
  overflow hidden
  &::before
    content "\e902"
    font-size: 2em
    font-weight: 900
    position relative
    animation 1s animacion infinite

.detalle
  background segundo
  padding 0 .8em
  display: flex
  flex-direction: column
  align-items center
  position relative
  margin-bottom 2em
  &::before
  &::after
    sombras()

  &::before
    sombra-before()

  &::after
    sombra-after()

  h2
  h3
  p
    text-align: center
    margin .5em

  p
    padding-bottom 1.5em

.menu
  width 100%
  padding 0  1em
  ul
    padding 0
    display: flex
    justify-content: space-around

  li
     list-style none

  a
    display block
    text-decoration none

  img
    width 40px

.rayita
  width 100px
  height 2px
  background lightgrey
  margin .8em

.logo
  width 100%
  img
    width 70%
    margin 0 auto
    display:  block

.habilidades
  ul
    padding  0 0 .5em
    margin .5em 0 1.5em 0s
    width 100%
    display: flex
    flex-direction: column
    align-items: flex-end
  li
    background primero
    width 80%
    height 1em
    margin 1em
    position relative
    overflow hidden
    for n in (1..5)
      &:nth-child({n})
        &::after
          after-preload()
          retraso((n*0.2)s)

@keyframes animacion
  0%
    top 0%
  40%
    top 50%
  60%
    top 50%
  100%
    top 0%

@keyframes preload
    0%
      left -1%
    100%
      left 101%